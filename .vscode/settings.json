// Place your settings in this file to overwrite the default settings
{
  // Controls the font family.
  "editor.fontFamily": "Fira Mono",

  // Controls the font size.
  "editor.fontSize": 14,

  // Controls the line height.
  "editor.lineHeight": 21,

  // Columns at which to show vertical rulers
  "editor.rulers": [150],

  // The number of spaces a tab is equal to.
  "editor.tabSize": 2,

  // Controls whether the editor should render whitespace characters
  "editor.renderWhitespace": true,

  // When enabled, will open files in a new window instead of reusing an existing instance.
  "window.openFilesInNewWindow": true,

  // Configure glob patterns for excluding files and folders.
  "files.exclude": {
    "**/.git": true,
    "**/.idea": true,
    "**/.sass-cache": true,
    "**/.svn": true,
    "**/.tmp": true,
    "**/.DS_Store": true
  },

  // When enabled, will trim trailing whitespace when you save a file.
  "files.trimTrailingWhitespace": true,

  // Configure the update channel to receive updates from. Requires a restart after change.
  "update.channel": "default",

  // IE hacks are only necessary when supporting IE7 and older
  "css.lint.ieHack": "error",

  // Enables or disables all validations
  "sass.validate": false,

  // Enable / disable JavaScript validation
  "javascript.validate.enable": false,

  // When there's no selection, search for the word under the cursor, instead of showing an input box.
  "searchdocs.searchWordUnderCursor": true
}
