## Custom

prompt_prompt() {
  local who=$(whoami)
  local host=$(scutil --get LocalHostName)
  local where=$(pwd)
  local content="${who} at ${host} in ${where}"

  "$1_prompt_segment" "$0" "$2" "red" "white" "$content" ""
}
